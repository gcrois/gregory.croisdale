---
import Layout from "@layouts/DefaultLayout.astro";
import Section from "@components/Section.astro";

import QRCodeGenerator from "src/utils/qrcode";
import PasswordGenerator from "src/utils/password";
---

<style>
	.section-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(15rem, 1fr));
		gap: 2rem;
		margin-bottom: 2rem;
	}

	/* Util page specific global styles */
	:global(.util-card) {
		background: rgba(255, 255, 255, 0.8);
		backdrop-filter: blur(12px);
		border-radius: var(--radius-md);
		border: 1px solid var(--bg-border);
		padding: 2rem;
		box-shadow: var(--shadow-md);
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	:global(.util-input) {
		width: 100%;
		padding: 0.75rem;
		border-radius: 8px;
		border: 1px solid var(--bg-border);
		background: rgba(255, 255, 255, 0.9);
		font-size: 1rem;
		color: var(--text-main);
	}

	:global(.qr-container) {
		display: flex;
		justify-content: center;
		padding: 1rem;
		background: white;
		border-radius: 8px;
	}

	:global(.button-group) {
		display: flex;
		gap: 1rem;
	}

	:global(.util-btn) {
		padding: 0.75rem 1.5rem;
		border-radius: 8px;
		border: none;
		font-weight: 600;
		cursor: pointer;
		transition: all 0.2s;
	}

	:global(.util-btn.primary) {
		background: var(--primary);
		color: white;
	}

	:global(.util-btn.secondary) {
		background: var(--bg-border);
		color: var(--text-main);
	}

	:global(.options-group) {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	:global(.radio-option) {
		display: flex;
		gap: 0.5rem;
		align-items: flex-start;
	}

	:global(.result-container) {
		background: var(--bg-body);
		padding: 1rem;
		border-radius: 8px;
		border: 1px solid var(--bg-border);
	}

	:global(.result-row) {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 1rem;
		margin-top: 0.5rem;
	}

	:global(.result-text) {
		font-family: monospace;
		word-break: break-all;
		font-size: 1.1em;
		color: var(--primary);
		margin: 0;
	}

	:global(.util-btn.small) {
		padding: 0.5rem 1rem;
		font-size: 0.9em;
	}

	:global(.checkbox-row) {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	@media screen and (max-device-width: 768px) {
		.section-grid {
			justify-items: center;
		}
	}
</style>

<Layout
	title="Utils"
	pageTitle="Gregory | Utils"
	description="Here is a live QR Code generator and a password generator :)"
>
	<main id="main" class="sections-container">
		<Section id="description">
			Here is a live QR Code generator and a password generator :)
		</Section>

		<Section id="qrcode">
			<QRCodeGenerator client:only="react" />
		</Section>

		<Section id="password">
			<PasswordGenerator client:only="react" />
		</Section>
	</main>
</Layout>
