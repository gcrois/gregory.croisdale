---
interface Props {}

import Profile from "@components/Profile.astro";
import H1 from "@components/HeaderText.astro";
import H2 from "@components/SubheaderText.astro";
import { FaGithub } from "react-icons/fa";

import "@styles/main.scss";
import "@styles/variables.scss";
import Navbar from "@components/Navbar.astro";
---

<style lang="scss">
	.sidebar {
		display: flex;
		flex-direction: column;
		width: 100%;
		max-width: 300px;
		height: fit-content;
		padding: 2rem;
		gap: 1.5rem;

		background-color: var(--bg-sidebar);
		backdrop-filter: blur(12px);
		-webkit-backdrop-filter: blur(12px);
		border: 1px solid var(--bg-border);
		box-shadow: var(--shadow-lg);
		border-radius: var(--radius-lg);

		position: sticky;
		top: 2rem;

		@media (max-width: 800px) {
			position: relative;
			top: 0;
			max-width: 100%;
			flex-direction: column;
			align-items: center;
			text-align: center;
		}
	}

	.profile-container {
		width: 100%;
		display: flex;
		justify-content: center;
	}

	hr {
		border: 0;
		height: 1px;
		background: linear-gradient(
			to right,
			transparent,
			var(--bg-border),
			transparent
		); // Need to define bg-border or use generic
		margin: 1.5rem 0;
		opacity: 0.5;
	}

    .divider {
        width: 100%;
        height: 1px;
        margin: 0.5rem 0;
        opacity: 0.5;
    }

	.github-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		color: var(--text-secondary);
		text-decoration: none;
		font-size: 0.9rem;
		font-weight: 500;
		transition: color var(--transition);

		&:hover {
			color: var(--text-main);
		}
	}
</style>

<div class="sidebar">
	<div class="profile-container">
		<Profile
			src="/images/me.jpg"
			alt="Gregory and his dog, Linux, at the beach"
		/>
	</div>

	<div class="sidebar-content">
		<H1>Gregory Croisdale</H1>
		<H2>He / Him / His</H2>
		<H2
			>Founding Engineer @ <a href="https://khaki.email" target="_blank"
				>Khaki</a
			></H2
		>
		<H2>Prev HCI and PL @ UMich</H2>
        <div class="divider"/>
		<a href="https://github.com/gcrois" target="_blank" rel="noopener noreferrer" class="github-link">
			<FaGithub />
			github.com/gcrois
		</a>
	</div>
	<Navbar classes="desktop" />
</div>
<Navbar classes="mobile" />
