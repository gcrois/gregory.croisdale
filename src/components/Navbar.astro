---
interface Props {
    classes: string;
}

import NavItem from "@components/NavItem.astro";

const { classes }: Props = Astro.props;
---
<style lang="scss">
.navbar {
    position: sticky;
    top: 0;

    display: flex;
    flex-direction: row;
    gap: 0.5rem;

    max-width: 100%;
    word-wrap: break-word;

    justify-content: space-around;
    align-content: center;
    flex-wrap: wrap;

    padding: 0.25rem;

    background-color: var(--dark-color);
}
</style>

<nav class={"navbar " + classes}>
    <slot/>
    <NavItem href="/#">Home</NavItem>
    <NavItem href="/#blog">Blog</NavItem>
    <NavItem href="/#research">Research</NavItem>
    <NavItem href="/cv.pdf">CV</NavItem>
</nav>