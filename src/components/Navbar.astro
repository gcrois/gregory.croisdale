---
interface Props {
	classes: string;
}

import NavItem from "@components/NavItem.astro";

const { classes }: Props = Astro.props;
---

<style lang="scss">
	.navbar {
		display: flex;
		flex-direction: row;
		gap: 0.5rem;
		width: 100%;
		flex-wrap: wrap;
		justify-content: center;
		padding: 0.5rem;
		border-radius: var(--radius-md);
		background-color: rgba(255, 255, 255, 0.5);
	}

	:global(.navbar.desktop) {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 0.75rem;
		background-color: transparent; // Sidebar already has background
		padding: 0;
		box-shadow: none;
		border: none;
		backdrop-filter: none;

		.navbarItem {
			width: 100%;
			background-color: rgba(255, 255, 255, 0.5);
			&:hover {
				background-color: white;
			}
		}
	}

	.navbar.mobile {
		width: 100%;
		margin: 0;
		position: sticky;
		top: 1rem;
		z-index: 100;
		backdrop-filter: blur(12px);
		box-shadow: var(--shadow-md);
	}
</style>

<nav class={"navbar shadow " + classes}>
	<slot />
	<NavItem href="/#blog">Blog</NavItem>
	<NavItem href="/#research">Research</NavItem>
	<NavItem href="/cv.pdf" newTab={true}>CV</NavItem>
	<NavItem href="/utils">Utils</NavItem>
</nav>
