---
interface Props {
    classes: string;
}

const { classes }: Props = Astro.props;
---
<style lang="scss">
.navbar {
    position: sticky;
    top: 0;

    display: flex;
    flex-direction: row;
    gap: 0.5rem;

    max-width: 100%;
    word-wrap: break-word;

    justify-content: space-around;
    align-content: center;
    flex-wrap: wrap;

    background-color: blue;
}

.navbar > * {
    display: inline-block;
    padding: 10px;
    border-radius: 10px;
    border: 1px solid black;
    background-color: white;
}

.navbar > *:hover {
    filter: brightness(1.2);
}
</style>

<nav class={"navbar " + classes}>
    <slot/>
    <div>Home</div>
    <div>Blog</div>
    <div>Research</div>
    <div>Resume</div>
</nav>